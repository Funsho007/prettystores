<h1><%= @category.name %></h1>
<div class="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= link_to product.name, product_path(product) %></h2>
      <p><%= product.description %></p>
      <p>Price: <%= number_to_currency(product.price) %></p>
    </div>
  <% end %>
</div>
<%= link_to 'Back to Categories', categories_path %>
